

<div id="message " class = "row">
  <div class = "  empty col-10 mr-0"></div>
  <div class = "empty col-2">
<button  data-toggle="modal" data-target="#create-item-modal" id='show-create-modal'>+</button>
</div>
</div>

{{#each lists as |list|}}
<section data-id={{list._id}}>

  {{#if list.completed}}
  {{!-- completed state --}}
  <div class="completed row"> 
    <input class="checkbox col-1" data-id={{list._id}} type="checkbox" checked>
    <span class="completed col-7"> {{list.title}} </span>
    <button class="update-item-button list-button btn col-2" data-toggle="modal" data-target="#update-item-modal" data-id={{list._id}} >Update
    </button>
<button class = "list-button btn delete-item-button col-2" data-id={{list._id}}>Delete</button>
</div>
<div class="row">
  <div class="col-1"></div>
  <span class="completed col-11"> {{list.description}} </span>
</div>
 {{!-- end completed state --}}
  {{else}}
  <div class = "row">
  <input class="checkbox col-1" data-id={{list._id}} type="checkbox" >
    <span class="col-7"> {{list.title}} </span>
    <button class = "update-item-button list-button btn col-2" data-toggle="modal" data-target="#update-item-modal" data-id={{list._id}}>Update</button>
    <button class = "list-button btn delete-item-button col-2" data-id={{list._id}}>Delete</button>
    </div>
    
    <div class="row">
  <div class="col-1"></div>
  <span class="col-11"> {{list.description}} </span>
</div>

 
  {{/if}}
</section>

{{/each}}

